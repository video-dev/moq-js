{
	"name": "moq-js",
	"type": "module",
	"workspaces": [
		"lib",
		"web",
		"samples"
	],
	"scripts": {
		"dev:moq-player": "npm run dev --workspace=@moq-js/player",
		"dev:simple-moq-web": "npm run dev --workspace=simple-moq-web",
		"start:demo": "node demo/server.cjs",
		"dev": "npm-run-all --parallel dev:moq-player dev:simple-moq-web start:demo",
		"build": "npm run build --workspaces",
		"build-web": "npm run build --workspace=web",
		"dev-web": "npm run dev --workspace=web",
		"lint": "npm run lint --workspaces",
		"fmt": "npm run fmt --workspaces"
	},
	"devDependencies": {
		"npm-run-all": "^4.1.5"
	}
}